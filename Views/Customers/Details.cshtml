@model DHSCRM.ViewModels.CustomerDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.AddressStreet)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Customer.AddressStreet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.AddressTown)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Customer.AddressTown)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.AddressCounty)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Customer.AddressCounty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.AddressPostCode)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Customer.AddressPostCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.EmailAddress)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Customer.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Telephone)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Customer.Telephone)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Customer.CustomerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<div>
    <h4>Contacts</h4>
    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Link with href
    </a>
    <table class="table table-striped table-hover collapse show" id="collapseExample">
        <thead class="thead-light">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Telephone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer.Contacts)
            {
                <tr>
                    <td scope="row">
                        <a asp-controller="Contacts" asp-action="Details" asp-route-id="@item.ContactId">@item.FirstName</a>
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.EmailAddress
                    </td>
                    <td>
                        @item.Telephone
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<hr />
@if (Model.Customer.Jobs.Count() > 0)
{
<div>
    <h4>Jobs</h4>
    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Link with href
    </a>
    <table class="table table-striped table-hover collapse show" id="collapseExample">
        <thead class="thead-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Total Miles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer.Jobs)
            {
                <tr>
                    <td scope="row">
                        <a asp-controller="Contacts" asp-action="Details" asp-route-id="@item.JobId">@item.JobId</a>
                    </td>
                    <td>
                        @item.JobName
                    </td>
                    <td>
                        @item.JobDescription
                    </td>
                    <td>
                        @item.TotalMiles
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}