@model DHSCRM.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressStreet)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.AddressStreet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressTown)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.AddressTown)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressCounty)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.AddressCounty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AddressPostCode)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.AddressPostCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Telephone)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<hr />
<div>
    <h4>Contacts</h4>
    <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Link with href
    </a>
    <table class="table table-striped table-hover collapse show" id="collapseExample">
        <thead class="thead-light">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Telephone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Contacts)
            {
                <tr>
                    <td scope="row">
                        <a asp-controller="Contacts" asp-action="Details" asp-route-id="@item.ContactId">@item.FirstName</a>
                    </td>
                    <td>
                        @item.LastName
                    </td>
                    <td>
                        @item.EmailAddress
                    </td>
                    <td>
                        @item.Telephone
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
