@model IEnumerable<DHSCRM.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["JobNumSort"]">@Html.DisplayNameFor(model => model.JobId)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostcodeFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostcodeTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalMiles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.CustomerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostcodeFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostcodeTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalMiles)
            </td>
            <td>
                <a asp-controller="Customers" asp-action="Details" asp-route-id="@item.Customer.CustomerId">@Html.DisplayFor(modelItem => item.Customer.CustomerName)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JobId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JobId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JobId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
